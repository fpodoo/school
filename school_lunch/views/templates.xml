<odoo>
<data>

<template id="menu">
    <t t-call="website.layout">
      <div id="wrap"/>
      <div class="container">
          <h1 class="mt-4">
              Lunch: <t t-esc="date.strftime('%B %Y')"/>
              <a t-attf-href="/menu/#{int((date+dmonth).timestamp())}" class="btn btn-outline-secondary float-right">
                  <i class="fa fa-arrow-right"/>
                  <t t-esc="(date+dmonth).strftime('%B %Y')"/>
              </a>
              <a t-attf-href="/menu/#{int((date-dmonth).timestamp())}" class="btn btn-outline-secondary float-right">
                  <i class="fa fa-arrow-left"/>
                  <t t-esc="(date-dmonth).strftime('%B %Y')"/>
              </a>
          </h1>
          <div class="o_menu" id="LunchMenu" t-att-data-date="timestamp"/>
      </div>
    </t>
</template>


<template id="kids">
    <t t-call="website.layout">
      <div id="wrap"/>
      <div class="container">
          <h1 class="mb-4 mt-4">Add a Kid</h1>
          <form method="post" action="/school/kid/add">
              <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
              <div class="o_kid_form" id="LunchKids"/>
          </form>
          <div t-if="len(my_kids)">
              <h1 class="mb-4 mt-4">Your Children</h1>
              <ul>
                  <li t-foreach="my_kids" t-as="kid">
                      <t t-out="kid.shortname"/>
                      <a t-attf-href="/school/kid/remove/#{kid.id}" class="text-danger"><span class="fa fa-times"></span></a>
                  </li>
              </ul>
          </div>
          <div class="mb128 mt64">
              <a href="/menu" class="btn btn-secondary"><i class="fa fa-arrow-right"></i> &amp;nbsp; Go to Menu</a>
          </div>
      </div>
    </t>
</template>




</data>
</odoo>
