<odoo>
<data>
<template id="menu">
    <t t-call="website.layout">
      <div id="wrap"/>
      <div class="container">
          <div class="row">
              <div class="col-8">
                  <h1 class="mb-4 mt-4">Commande des Repas: <t t-esc="date.strftime('%B %Y')"/></h1>
              </div><div class="col-4">
                  <a t-attf-href="/menu/#{int((date+dmonth).timestamp())}" t-esc="(date+dmonth).strftime('%B %Y')" class="btn"></a>
                  <a t-attf-href="/menu/#{int((date-dmonth).timestamp())}" t-esc="(date-dmonth).strftime('%B %Y')" class="btn"></a>
              </div>
          </div>
          <table class="table table-hover table-sm">
              <thead class="thead-light">
              <tr>
                  <th></th>
                  <th>Manech R.</th>
                  <th>

                      <select>
                          <option>Selct a Kid</option>
                          <option>Charlie Pinckaers</option>
                          <option>Lena Pinckaers</option>
                          <option>Manech Ridel</option>
                      </select>

                  </th>
                  </tr>
              </thead>
              <tr t-foreach="menus" t-as="menu">
                  <td>
                      <b t-out="menu.date.strftime('%A, %d %b %Y')"></b><br/>
                      <t t-out="menu.name"/>
                      <span t-foreach="menu.allergy_ids" t-as="allergy" class="badge badge-pill badge-success">
                          <t t-out="allergy.name"/>
                      </span>
                  </td><td class="table-danger">
                      X
                  </td><td></td>
              </tr>
          </table>
          <div class="text-right mb128">
              <button class="btn btn-primary">Valider</button>
          </div>

      </div>
    </t>
</template>
</data>
</odoo>
